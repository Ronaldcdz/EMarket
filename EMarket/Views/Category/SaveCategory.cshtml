@using EMarket.Core.Application.ViewModels.Categories;
@model SaveCategoryViewModel
@{
    bool editMode = Model.Id == 0 ? false : true;
    ViewData["Title"] = "Save Category";
}

<div class="container-fluid">

    <div class="row">

        <div class="col-6 offset-3">

            <div class="card">

                <div class="card-header bg-dark text-light">
                    @if (editMode == true)
                    {
                        <h4>Editing the Category: @Model.Name</h4>
                    }
                    else
                    {
                        <h4>Adding a new Category</h4>

                    }
                </div>

                <div class="card-body">

                    
                   
                        <form method="post" asp-controller="Category" asp-action="@(editMode ? "Edit" : "Create")">

                            <div class="mb-3">
                                <label asp-for="Name" class="form-label">Name:</label>
                                <input type="text" asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description:</label>
                            <input type="text" asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>

                            </div>

                            
                            <input type="hidden" asp-for="Id" />
                        <a asp-controller="Category" asp-action="Index" class="btn btn-warning">Go back</a>

                            <button type="submit" class="btn btn-primary">Save</button>

                        </form>

                    



                </div>

            </div>

        </div>

    </div>

</div>
