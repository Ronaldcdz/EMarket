@using EMarket.Core.Application.ViewModels.Categories;
@model List<CategoryViewModel>
@{
    ViewData["Title"] = "Categories";
}

<div class="row mb-3">
    <div class="col-3 offset-9">
        <a asp-controller="Category" asp-action="Create" class="btn btn-outline-success">Add a new Category</a>
    </div>
</div>

<div class="row">






    @if (Model == null || Model.Count == 0)
    {

        <h2>There is no Categories Created</h2>
    }
    else
    {

        @foreach (CategoryViewModel category in Model)
        {

            <div class="col-4">
                <div class="card shadow-sm mb-3">

                    <div class="card-body">
                        <h4>Name: @category.Name</h4>
                        <p class="card-text">Description: @category.Description</p>


                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-outline-info">Edit</a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                            </div>
                            <small class="fw-bold fs-6">Adverts Quantity: @category.AdvertsQuantity</small>

                        </div>
                    </div>
                </div>
            </div>
        }

    }





</div>

</div>

